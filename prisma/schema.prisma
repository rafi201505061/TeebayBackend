generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @default(autoincrement()) @id
  userId String @unique
  firstName String
  address String @default("")
  lastName String
  email String @unique
  phoneNo String
  encryptedPassword String
  products Product[]
}

model Product{
  id Int @default(autoincrement()) @id
  productId String @unique
  title String
  description String
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt
  price Float
  rentPrice Float
  rentType RentType
  views Int @default(0)
  available Boolean @default(true)
  owner User @relation(fields: [ownerId],references: [id])
  ownerId Int
  categories Category[]
}

model Category{
  id Int @default(autoincrement()) @id
  categoryId String @unique
  title String
  products Product[]
}

enum RentType{
  HOURLY
  DAILY
  MONTHLY
  YEARLY
}
